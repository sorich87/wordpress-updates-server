(function(){
  <% if !@errors.nil? && !@errors.empty? %>
    var errors = $.parseJSON('<%= @errors.to_json.html_safe %>');
    themeMy.themeForm.handleUploadErrors(errors);
  <% else %>
    var html = '<%= escape_javascript(render @theme) %>';
    var $element = themeMy.themeForm.updateTheme('<%=@theme.id%>', html);
    themeMy.themeForm.initTheme($element);
  <% end %>
})()