<h1 class="page-header">Customers</h1>

<h2>New Customer</h2>

<%= simple_form_for @customer, html: {class: 'form-horizontal'} do |f| %>
  <% if f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= f.error_notification %>
    </div>
  <% end %>
  
  <fieldset>
    <legend>Customer Details</legend>
    <%= f.input :first_name, label: 'First Name', input_html: {class: 'input-xlarge'} %>
    <%= f.input :last_name, label: 'Last Name', input_html: {class: 'input-xlarge'} %>
    <%= f.input :email, label: 'Email Address', input_html: {class: 'input-xlarge'} %>

    <div class="form-actions">
      <%= f.submit 'Save Customer', class: 'btn-primary' %>
      <%= link_to 'Cancel', customers_path, class: 'btn' %>
    </div>
  </fieldset>
<% end %>