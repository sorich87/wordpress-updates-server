<div class="row">
  <div class="span9">
    <fieldset>

      <% if f.object.persisted? %>
        <legend>Edit package</legend>
      <% else %>
        <legend>New Package</legend>
      <% end %>

      <%= f.error_notification %>

      <%= f.input :name, label: 'Package Name', input_html: {class: 'input-xlarge'} %>

      <%= f.input :description, label: 'Package Description', input_html: {class: 'input-xlarge'} %>

      <%= f.input :price, label: 'Price', wrapper: :prepend do %>
        <span class="add-on">&#36;</span><%= f.input_field :price, class: 'input-mini' %>
      <% end %>

      <%= f.input :validity, collection: collection_for_package_validities %>

      <%= f.input :billing, as: :radio_buttons, collection: collection_for_package_billings %>

      <%= f.association :themes, as: :check_boxes, collection: @business.themes.all %>

      <%= f.input :number_of_themes, label: 'Number of Themes', wrapper: :prepend do %>
        <%= f.input_field :number_of_themes, class: 'input-mini' %>
        <p class="help-inline">Number of themes the customer gets at once after buying this package. 0 for all themes.</p>
      <% end %>

      <%= f.input :number_of_domains, label: 'Number of Domains', wrapper: :prepend do %>
        <%= f.input_field :number_of_domains, class: 'input-mini' %>
        <p class="help-inline">Number of domains the customer can install the themes on. 0 for unlimited.</p>
      <% end %>

      <div class="form-actions">
        <%= f.button :submit, class: 'btn-primary', value: 'Save Package' %>
        <%= link_to 'Cancel', settings_packages_path %>
      </div>
    </fieldset>
  </div>
</div>
