<%= render :partial => 'settings/layout' %>

<div class="row">
  <div class="span9">
    <%= form_for [:settings, @business], url: settings_business_path, html: {class: 'form-horizontal'} do |f| %>
      <fieldset>
        <legend>Company Profile</legend>
        <div class="control-group">
          <p>Please make sure this information is accurate.
          Your customers will use it to get in touch with you.</p>
        </div>
        <div class="control-group">
          <%= label :name, "Company name", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :name, :class => "input-xlarge" %>
          </div>
        </div>
        <div class="control-group">
          <%= label :email, "Email address", :class => "control-label" %>
          <div class="controls">
            <%= f.email_field :email, :class => "input-xlarge" %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.submit "Save changes", :class => "btn btn-primary" %>
          <a class="btn" href="">Cancel</a>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>